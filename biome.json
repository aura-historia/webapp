{
    "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true,
        "defaultBranch": "develop"
    },
    "files": {
        "ignoreUnknown": false,
        "includes": [
            "**/src/**/*",
            "**/.vscode/**/*",
            "**/index.html",
            "**/vite.config.js",
            "!**/src/routeTree.gen.ts",
            "!**/src/client"
        ]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineEnding": "lf",
        "lineWidth": 100
    },
    "assist": {
        "actions": {
            "source": {
                "organizeImports": "off"
            }
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "a11y": {
                "useSemanticElements": "off"
            },
            "suspicious": {
                "noUnknownAtRules": "off"
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "double"
        }
    }
}

