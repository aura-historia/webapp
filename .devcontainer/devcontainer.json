{
  "name": "Node.js",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:1-22-bookworm",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "pnpmVersion": "latest"
    }
  },
  "mounts": [
    "source=pnpm-cache,target=/home/node/.local/share/pnpm/store,type=volume"
  ],
  "postCreateCommand": "pnpm install",
  "forwardPorts": [
    3000
  ],
  "customizations": {
    "jetbrains": {
      "backend": "WebStorm",
    }
  },
}